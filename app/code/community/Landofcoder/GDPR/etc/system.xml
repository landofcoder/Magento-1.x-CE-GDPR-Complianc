<?xml version="1.0"?>
<config>
    <sections>
        <landofcoder_gdpr translate="label" module="landofcoder_gdpr">
            <label>GDPR Compliance</label>
            <tab>customer</tab>
            <frontend_type>text</frontend_type>
            <sort_order>110</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <configuration translate="label">
                    <label>Configuration</label>
                    <comment><![CDATA[You can configure Google Tag Manager to serve all your 3rd party Javascript includes which will drastically decrease the complexity of adhering to the 'express consent' aspects of cookie policy. For more guidance on setting up Google Tag Manager in this was please review our <a href="https://landofcoder.com" target="__BLANK">GDPR for Magento</a>]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <cookienotice translate="label">
                            <label>Enable Cookie Notice?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>115</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cookienotice>
                        <enabled translate="label">
                            <label>Enable Customer Account Deletion / Anonymisation</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>120</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <enablepopup translate="label">
                            <label>Enable Show Policy on Popup</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>125</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enablepopup>
                        <successmessage translate="label">
                            <label>Success message</label>
                            <comment>The message shown to customers on the frontend after deleting their account. (leave blank for default)</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>130</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </successmessage>
                        <cms_page translate="label">
                            <label>Information Page</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_cms_page</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </cms_page>
                        <gtm_container_id translate="label">
                            <label>Google Tag Manager Container ID</label>
                            <comment>By migrating ALL your third party JS including Beacons, Pixel Tracking, you can adhere to the GDPR regulations as this will ONLY load this container and trigger 3rd party cookies once you have obtained 'express consent' from your visitor</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gtm_container_id>
                        <cookietitle translate="label">
                            <label>Cookie Title</label>
                            <comment>Input cookie Title (empty to use default).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>140</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </cookietitle>
                        <linktitle translate="label">
                            <label>Link Title</label>
                            <comment>Input Link Title (empty to use default).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>145</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </linktitle>
                        <acceptlabel translate="label">
                            <label>Accept Cookie Label</label>
                            <comment>Input Accept Cookie Label (empty to use default).</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>150</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </acceptlabel>
                    </fields>
                </configuration>
            </groups>
        </landofcoder_gdpr>
    </sections>
</config>
